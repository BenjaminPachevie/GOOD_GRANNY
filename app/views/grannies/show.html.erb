



<div class="container">
  <div>
    <h1>Meet your granny</h1>
    <span><%= link_to "Nos grannies", grannies_path, class: "back-button" %></span>
  </div>



  <div class="template">

    <div class="show-card col-12">

      <div class="main-card-granny col-7">
        <span class="name-granny"><%= @granny.name %></span>
        <br>
        <br>
        <span class="categories">Couture</span>
        <br>
        <br>
        <i class="fa-solid fa-location-dot" style="color: #FFCACC;"></i> <%= @granny.location %>
        <br>
        <br>
        <span class=""><%= @granny.presentation %></span>
      </div>

      <div class="card-from-res col-4">
        <%= simple_form_for [@granny, @reservation] do |f| %>
          <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
          <%= f.input :end_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
          <%= f.input :category_booked, collection: @granny.categories.pluck(:name) %>
