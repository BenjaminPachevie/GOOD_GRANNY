


<div class="container">

    <h1>Our grannies</h1>

    <div class="row">

      <div class="col-8">

          <div class="grannies">
            <% @grannies.each do |granny| %>
              <%= link_to granny_path(granny), class:"text-decoration-none" do %>
                <div class="card-granny m-1">
                  <div class="top-card-granny">
                    <div class="name-granny"><%= granny.name %></div>
                    <div class="categories">Couture</div>
                  </div>
                    <div id="carouselExampleControls" class="carousel slide">
                      <div class="carousel-inner">
                      <% active = "active" %>
                        <% granny.photos.each do |photo| %>
                          <div class="carousel-item <%= active %>">
                            <%= cl_image_tag photo.key, height: 120, width: 200, crop: :fill, class:"img-carousel" %>
                          </div>
                          <% active = "" %>
                        <% end %>
                      </div>
                      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                      </button>
                      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                      </button>
                      </div>
                  <%# <div class="presentation"><%= granny.presentation</div> %>
                </div>
              <% end %>
            <% end %>
          </div>

      </div>

      <div class="col-4">

        <div id="map-sticky"
              data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>

      </div>


    </div>

</div>
